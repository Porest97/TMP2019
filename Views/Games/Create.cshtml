@model TMP2019.Models.DataModels.TMPHockeyModels.Game

@{
    ViewData["Title"] = "Create";
}

<h1>Create Game</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameCategoryId" class="control-label"></label>
                <select asp-for="GameCategoryId" class="form-control" asp-items="ViewBag.GameCategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="GameNumber" class="control-label"></label>
                <input asp-for="GameNumber" class="form-control" />
                <span asp-validation-for="GameNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TSMNumber" class="control-label"></label>
                <input asp-for="TSMNumber" class="form-control" />
                <span asp-validation-for="TSMNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameDateTime" class="control-label"></label>
                <input asp-for="GameDateTime" class="form-control" />
                <span asp-validation-for="GameDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArenaId" class="control-label"></label>
                <select asp-for="ArenaId" class="form-control" asp-items="ViewBag.ArenaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label"></label>
                <select asp-for="TeamId" class="form-control" asp-items="ViewBag.TeamId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TeamId1" class="control-label"></label>
                <select asp-for="TeamId1" class="form-control" asp-items="ViewBag.TeamId1"></select>
            </div>
            <div class="form-group">
                <label asp-for="HomeTeamScore" class="control-label"></label>
                <input asp-for="HomeTeamScore" class="form-control" />
                <span asp-validation-for="HomeTeamScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeamScore" class="control-label"></label>
                <input asp-for="AwayTeamScore" class="form-control" />
                <span asp-validation-for="AwayTeamScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonId" class="control-label"></label>
                <select asp-for="PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PersonId1" class="control-label"></label>
                <select asp-for="PersonId1" class="form-control" asp-items="ViewBag.PersonId1"></select>
            </div>
            <div class="form-group">
                <label asp-for="PersonId2" class="control-label"></label>
                <select asp-for="PersonId2" class="form-control" asp-items="ViewBag.PersonId2"></select>
            </div>
            <div class="form-group">
                <label asp-for="PersonId3" class="control-label"></label>
                <select asp-for="PersonId3" class="form-control" asp-items="ViewBag.PersonId3"></select>
            </div>
            <div class="form-group">
                <label asp-for="GameStatusId" class="control-label"></label>
                <select asp-for="GameStatusId" class="form-control" asp-items="ViewBag.GameStatusId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-sm btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-sm btn-success" asp-controller="Home" asp-action="Lists">Back to Home Lists</a>
    <a class="btn btn-sm btn-success" asp-controller="GameLists" asp-action="ScheduledGames">Back to Scheduled Games</a>
    <a class="btn btn-sm btn-success" asp-controller="GameLists" asp-action="StartedGames">Back to Started Games</a>
    <a class="btn btn-sm btn-success" asp-controller="GameLists" asp-action="FinalGames">Back to Final Games</a>
    <a class="btn btn-sm btn-success" asp-controller="GameLists" asp-action="ArchivedGames">Back to Archived Games</a>
    <a class="btn btn-sm btn-success" asp-controller="Games" asp-action="Index">Back to Games List</a>
</div>


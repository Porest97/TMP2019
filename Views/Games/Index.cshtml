@model IEnumerable<TMP2019.Models.DataModels.TMPHockeyModels.Game>

@{
    ViewData["Title"] = "Index";
}

<h1>TMP Games</h1>
<div>
    <a class="btn btn-sm btn-success" asp-action="Create">Create Game !</a>
    <a class="btn btn-sm btn-success" asp-controller="Home" asp-action="Lists">Go to Home Lists</a>
    <a class="btn btn-sm btn-success" asp-controller="GameLists" asp-action="ScheduledGames">Go to Scheduled Games</a>
    <a class="btn btn-sm btn-success" asp-controller="GameLists" asp-action="StartedGames">Go to Started Games</a>
    <a class="btn btn-sm btn-success" asp-controller="GameLists" asp-action="FinalGames">Go to Final Games</a>
    <a class="btn btn-sm btn-success" asp-controller="GameLists" asp-action="ArchivedGames">Go to Archived Games</a>
</div>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Arena: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a class="btn btn-sm btn-success" asp-action="Index">Back to Scheduled Games</a>
        </p>
    </div>
</form>

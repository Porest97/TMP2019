            @*   <td>@Html.DisplayFor(modelItem => item.LD2Fee)</td>
        <td>@Html.DisplayFor(modelItem => item.LD2TravelKost)</td>
        <td>@Html.DisplayFor(modelItem => item.LD2Alowens)</td>
        <td>@Html.DisplayFor(modelItem => item.LD2LateGameKost)</td>*@

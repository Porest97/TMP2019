        <td>@Html.DisplayFor(modelItem => item.LD1TravelKost)</td>
        <td>@Html.DisplayFor(modelItem => item.LD1Alowens)</td>
        <td>@Html.DisplayFor(modelItem => item.LD1LateGameKost)</td>*@

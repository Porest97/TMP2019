        <td>@Html.DisplayFor(modelItem => item.HD2TravelKost)</td>
        <td>@Html.DisplayFor(modelItem => item.HD2Alowens)</td>
        <td>@Html.DisplayFor(modelItem => item.HD2LateGameKost)</td>*@
            <td>@Html.DisplayFor(modelItem => item.HD2TotalFee)</td>

            <td>@Html.DisplayFor(modelItem => item.LD1.FullName)</td>
